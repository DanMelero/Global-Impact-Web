<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Global_Impact</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header style="background-color: #B7DBD2; ">
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3 m-0">
            <div class="container d-flex"  style="height:100px; margin:0">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index"><img src="~/img/weFeed.png" width="150"/></a>


                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1 d-flex justify-content-end mr-5">
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:22px" asp-controller="Home" asp-action="Index">Página Inicial</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:22px" asp-controller="Home" asp-action="Privacy">Doar Alimento</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" style="font-size:22px" asp-controller="Home" asp-action="Privacy">ONGs</a>
                        </li>
                    </ul>
                </div>
                <a class="navbar-brand"  asp-controller="Home" asp-action="Index"><img src="~/img/portaFechada.png" width="50" /></a>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Global_Impact - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

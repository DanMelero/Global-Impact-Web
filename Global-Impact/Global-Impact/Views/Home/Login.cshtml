@model Estabelecimento

@{
    ViewData["Title"] = "Login";
    Layout = "_LayoutUser";
}

<div class="w-50 mx-auto mt-2 mb-4 d-flex justify-content-around">
    <a asp-action="login" asp-controller="home" class="btn-link current-page">Login</a>
    <a asp-action="cadastrar" asp-controller="estabelecimento" class="btn-link">Cadastro</a>
</div>

<div class="w-50 mx-auto mb-4 d-flex justify-content-around">
    <a asp-action="Login" asp-controller="home" class="btn-disabled btn" title="Em breve">Pessoa Física</a>
    <a asp-action="login" asp-controller="home" class="btn-abled btn">Pessoa Jurídica</a>
</div>

<div class="d-flex col-6 justify-content-center align-self-center m-auto">
    <Feedback Texto="@TempData["Erro"]" is-error="true"></Feedback>
</div>

<div class="d-flex align-items-center justify-content-center container">
    <form class="w-50" asp-action="login" asp-controller="home">
        <div class="form-group">
            <div>
                <label asp-for="Email"></label>
            </div>
            <div class="d-flex flex-column">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger mb-3" style="text-align: center"></span>
            </div>
        </div>

        <div class="form-group">
            <div>
                <label asp-for="Senha"></label>
            </div>
            <div class="d-flex flex-column">
                <input asp-for="Senha" type="password" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger mb-3" style="text-align: center"></span>
            </div>
        </div>

        <div class="d-flex flex-column justify-content-center text-center">
            <button class="btn-abled btn m-auto">Entrar</button>
            <a asp-action="cadastrar" asp-controller="estabelecimento" class="mt-2 link">
                Ainda não tem cadastro? <br />Realize clicando aqui
            </a>
        </div>
    </form>
</div>


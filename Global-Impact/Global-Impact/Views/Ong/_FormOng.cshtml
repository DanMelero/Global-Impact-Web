@model Ong

        <div class="d-flex justify-content-center " style="padding-top: 2.5%; padding-bottom: 2.5%;">
            <h2 class="font-weight-bold d-flex flex-row m-0" style="color: var(--light-red)">Cadastre sua ong</h2>
        </div>
        <div class="form-row d-flex flex-row justify-content-between">
            <div style="width: 20%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Nome"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Nome" class="form-control mb-2">
                    <span asp-validation-for="Nome" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 20%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Telefone"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Telefone" id="tel" class="form-control mb-2">
                    <span asp-validation-for="Telefone" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 50%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Foto"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Foto" class="form-control mb-2">
                    <span asp-validation-for="Foto" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
        </div>
        <div class="form-row d-flex flex-row justify-content-between">
            <div style="width: 50%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.Bairro"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.Bairro" class="form-control mb-2">
                    <span asp-validation-for="Endereco.Bairro" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 20%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.Cep"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.Cep" id="cep" class="form-control mb-2">
                    <span asp-validation-for="Endereco.Cep" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 20%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.Cidade"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.Cidade" class="form-control mb-2">
                    <span asp-validation-for="Endereco.Cidade" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
        </div>
        <div class="form-row d-flex flex-row justify-content-between">
            <div style="width: 30%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.Complemento"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.Complemento" class="form-control mb-2">
                    <span asp-validation-for="Endereco.Complemento" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 15%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.Numero"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.Numero" class="form-control mb-2">
                    <span asp-validation-for="Endereco.Numero" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 15%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.UF"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.UF" id="uf" class="form-control mb-2">
                    <span asp-validation-for="Endereco.UF" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
            <div style="width: 30%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Endereco.Logradouro"></label>
                </div>
                <div class="d-flex flex-column">
                    <input asp-for="Endereco.Logradouro" class="form-control mb-2">
                    <span asp-validation-for="Endereco.Logradouro" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
        </div>
        <div class="form-row d-flex flex-row justify-content-between">
            <div style="width: 100%;">
                <div class="d-flex justify-content-center">
                    <label asp-for="Descricao"></label>
                </div>
                <div class="d-flex flex-column">
                    <textarea asp-for="Descricao" class="form-control mb-2"></textarea>
                    <span asp-validation-for="Descricao" class="text-danger mb-3" style="text-align: center"></span>
                </div>
            </div>
        </div>

        <script type="text/javascript">

            var TelMaskBehavior = function (val) {
                return val.replace(/\D/g, '').length === 11 ? '(00) 00000-0000' : '(00) 0000-00009';
            },
                TelOptions = {
                    onKeyPress: function (val, e, field, options) {
                        field.mask(TelMaskBehavior.apply({}, arguments), options);
                    }
                };
            $('#tel').mask(TelMaskBehavior, TelOptions);
            $("#cep").mask("00000-000");
            $("#uf").mask("AA");
        </script>

@model Ong 

@{
    ViewData["title"] = "Detalhes da ong";
}
<meta charset="utf-8" />


@section Links{
    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
        <ul class="navbar-nav flex-grow-1 d-flex justify-content-end mr-5">
            <li class="nav-item">
                <a class="nav-link text-dark another-page" style="font-size:22px" asp-controller="Home" asp-action="Index">Página Inicial</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark another-page" style="font-size:22px" asp-controller="doacao" asp-action="cadastrar">Doar Alimento</a>
            </li>
            <li class="nav-item">
                <a class="nav-link current-page" style="font-size:22px; color: var(--main-red); font-weight: bold" asp-controller="Ong" asp-action="Index">ONGs</a>
            </li>
        </ul>
    </div>
}

<div class="pre-scrollable d-flex box-shadow flex-column align-items-center w-100 mh-100 col-12 pb-5" style="background-color: #F8F8F8; padding-left: 5%; padding-right: 5%;">
    <div class="w-100">
        <p class="d-flex justify-content-center font-weight-bold mb-0 pt-4 pb-5 h1" style="color: var(--light-red)">@Model.Nome</p>
    </div>
    <div class="d-flex flex-row w-100">
        <div>
            <img src="@(Model.Foto == null ? "https://raw.githubusercontent.com/Poagilers-Fenix/WebApp-Challenge/main/Imagens/no-image-found.png?token=AOXNWKVBRD3WDDJKASDBZT3BHUBDY" : @Model.Foto)"
                  style="object-fit:  fill; height: 350px; width: 350px; border-radius: 30px;"/>
        </div>
        <div class="d-flex justify-content-center align-items-center ml-3 pb-0">
            <p class="h4">@Model.Descricao</p>
        </div>
    </div>
    <div class="d-flex justify-content-center flex-row w-100 py-5">
        <p class="h2">Informações de contato e endereço</p>
    </div>
    <div class="w-100 d-flex flex-row justify-content-between">
        <div>
            <p class="h4">Endereço: @Model.Endereco.Cidade - @Model.Endereco.Logradouro, @Model.Endereco.Bairro, @Model.Endereco.Numero </p>
            <p class="h4">Complemento: @Model.Endereco.Complemento</p>
            <p class="h4">CEP: @Model.Endereco.Cep</p>
            <p class="h4">Email: Email mock</p>
            <p class="h4">Horário de funcionamento: mock</p>
            <p class="h4 mb-0">Telefone: @Model.Telefone</p>
        </div>
        <div class="d-flex flex-column justify-content-around ml-5">
            <a asp-action="DeletarOng" asp-controller="Ong" class="btn btn-block text-white" style="background-color: var(--light-red);">Você é responsável por essa ong e quer tirá-la do sistema? clique aqui</a>
            <a asp-action="Cadastrar" asp-controller="Doacao" class="btn btn-block text-white" style="background-color: var(--light-red); ">Faça uma doação para essa ong</a>
        </div>
    </div>
</div>
